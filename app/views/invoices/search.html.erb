
<% if @final_search_result != [] %>

<h2>Search Results</h2>


<table class="table table-bordered table-hover" id="search_invoice_table">
  <thead id="table_head">
    <tr>
      <th class = "date_column">Inv date</th>
      <th class = "invoice_table_normal_column">Invoice number</th>
      <th class = "invoice_table_normal_column">Customer Name</th>
      <th class = "invoice_table_normal_column">Customer Phone</th>
      <th class = "invoice_table_normal_column">Customer Email</th>
      <th>Products</th>
      <th class = "invoice_table_normal_column">Total</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @final_search_result.each do |invoice| %>
      <tr>
        <td><%= invoice.inv_date %></td>
        <td><%= invoice.invoice_number %></td>
        <td><%= invoice.customer_name %></td>
        <td><%= invoice.customer_phone %></td>
        <td><%= invoice.customer_email %></td>
        <td><%= invoice.products %></td>
        <td><%= invoice.total %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
<h3> Sorry, there were no results that matched your search parameters </h3>
<% end %>